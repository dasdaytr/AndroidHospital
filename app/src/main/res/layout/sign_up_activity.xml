<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signUpActivity"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/TextViewColorSignUp"
        android:textSize="30sp"
        android:text="@string/Registration"
        android:gravity="center_horizontal"
        android:id="@+id/TextViewSignUpId"
        android:layout_marginTop="100sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/EditTextColorSignUp"
        android:layout_below="@+id/TextViewSignUpId"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="30sp"
        android:hint="Name"
        android:id="@+id/EditTextNameId"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/EditTextColorSignUp"
        android:layout_below="@+id/EditTextNameId"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="30sp"
        android:hint="Last name"
        android:id="@+id/EditTextLastNameId"/>

    <EditText
        android:id="@+id/EditTextEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextLastNameId"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="20sp"
        android:background="@color/EditTextColorSignUp"
        android:inputType="textEmailAddress"
        android:hint="Email" />

    <EditText
        android:id="@+id/EditTextPasswordId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextEmailId"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="20sp"
        android:background="@color/EditTextColorSignUp"
        android:inputType="textPassword"
        android:hint="Password" />

    <EditText
        android:id="@+id/EditTextRPasswordId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextPasswordId"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="20sp"
        android:inputType="textPassword"
        android:background="@color/EditTextColorSignUp"
        android:hint="RPassword" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:layout_below="@+id/EditTextRPasswordId"
        android:layout_marginTop="35sp"
        android:id="@+id/ButtonSignUpR"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:layout_below="@+id/ButtonSignUpR"
        android:layout_marginTop="10sp"
        android:id="@+id/ButtonComeBackMainActivity"/>


</RelativeLayout>

